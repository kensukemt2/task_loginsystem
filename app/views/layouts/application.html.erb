<!DOCTYPE html>
<html>
  <head>
    <title>Task2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">header</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">ブログアプリ

              </a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul>
                <%= link_to 'トップ画面', root_path,type: "button", class: "btn btn-warning btn-lg" %>
                <%= link_to '新規作成', new_blog_path,type: "button", class: "btn btn-warning btn-lg" %>
                <%= link_to 'ブログ一覧', blogs_path,type: "button", class: "btn btn-warning btn-lg" %>
              </ul>
            </div>
          </div>
        </nav>

      </header>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <% if logged_in? %>
        <%= link_to "Profile", user_path(current_user.id) %>
        <%= link_to "Logout", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "Signup", new_user_path %>
        <%= link_to "Login", new_session_path %>
      <% end %>

      <%= yield %>
    </div>

<footer class="footer">
  <div class="container">
    <p class="text-muted">© 2015-2016 Copyright DIVE INTO CODE Corp.</p>
  </div>
</footer>
  </body>
</html>
